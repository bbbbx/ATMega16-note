#include <iom16v.h>

void delay(unsigned char x)
{
  unsigned int i,j;
  for(i = 0 ; i < x ;i ++)
    for(j = 0 ; j < 1141; j++) ;
}

void main()
{
  unsigned char table[]={0x3f , 0x06 , 0x5b , 0x4f , 0x66 , 0x6d , 0x7d , 0x07 , 0x7f , 0x6f};
  int i=0,count=0;
  DDRC = 0xff;
  PORTC = 0x00;
  while(1)
  {
	if(count%5==0)
	{
	  PORTC = table[i];
	  i++;
	}
	if(i==9)
	  i=0;
	delay(200);
	count++;
  }
}