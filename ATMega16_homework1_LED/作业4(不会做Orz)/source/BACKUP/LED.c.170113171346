void LED_right()  //向右移动，初始值
{
  PORTA = 0x01;
  delay(100);
  LED_down_0();
  PORTA = 0x02;
  delay(100);
  LED_down_1();
  PORTA = 0x04;
  delay(100);
  LED_down_2();
  PORTA = 0x08;
  delay(100);
  LED_down_3();
}

void main()
{
  DDRA = 0xff;
  DDRC = 0x00;
  PORTA = 0x00;
  PORTC = 0x0f;
  while(1)
  {
    LED_right();
	
  }
}