#include <iom16v.h>

void delay(int n)  //延时函数
{
  int i , j;
  for (i = 0 ; i < n ; i ++)  
    for(j = 0 ; j < 1141 ; j++)  ;
}

void LED_down_0()  //按下按键时
{
  while(1)
  {
    if((PINC & (1<<PC3)) == 0)
    {
      PORTA = 0x80;
	  delay(100);
	  PORTA = 0x08;
	  delay(100);
    }
  }
}

