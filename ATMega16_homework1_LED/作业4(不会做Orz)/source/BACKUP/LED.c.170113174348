void LED_right()  //向右移动，初始值
{
  PORTA = 0x01;
  delay(100);
  LED_down_0();  //按下下按键时
  PORTA = 0x02;
  delay(100);
  LED_down_1();  //按下下按键时
  PORTA = 0x04;
  delay(100);
  LED_down_2();  //按下下按键时
  PORTA = 0x08;
  delay(100);
  LED_down_3();  //按下下按键时
}

