#include <iom16v.h>

#define delayms 100;

void delay(int n)  //延时函数
{
  int i , j;
  for (i = 0 ; i < n ; i ++)  
    for(j = 0 ; j < 1141 ; j++)  ;
}

void LED_down_0()  //按下下按键时
{
  if((PINC & (1<<PC3)) == 0)
  {
    while(1)
	{
      PORTA = 0x01;
	  delay(delayms);
	  PORTA = 0x10;
	  delay(delayms);
	  PORTA = 0x00;
	  PORTB = 0x01;
	  delay(delayms);
	  PORTB = 0x10;
	  delay(delayms);
	  PORTB = 0x00;
	}
  }
}

