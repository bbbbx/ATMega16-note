#include <iom16v.h>

void delay(int n)
{
  int i , j;
  for (i = 0 ; i < n ; i ++)  
    for(j = 0 ; j < 1141 ; j++)  ;
}

void main()
{
  DDRA = 0xff;
  DDRC = 0x00;
  PORTA = 0x00;
  PORTAC = 0x0f;
  while(1)
  {
    PORTA = 0x01;
	delay(100);
	PORTA = 0x02;
	delay(100);
	PORTA = 0x04;
	delay(100);
	PORTA = 0x08;
	delay(100);
	
  }
}