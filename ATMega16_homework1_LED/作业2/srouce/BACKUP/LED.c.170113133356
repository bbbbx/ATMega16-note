#include <iom16v.h> 
const unsigned char LED[]={0x01,0x02,0x04,0x08,0x10,0x20,0x40,0x80};  //PORTA
void delay (int n)
{
  int i , j;
  for (i = 0 ; i < n ; i ++)  
    for(j = 0 ; j < 1141 ; j++)  ;
}

void main()
{
  unsigned char n;
  DDRA = 0xff;
  PORTA = 0x00;
  DDRB = 0x00;
  PORTB = 0x03;
  while(1)
  {
    if ((PINB & (1<<PB0) ) == 0)  //判断是否按下按键1
    {
	  while (1)
	  {
	    for(n = 0 ; n < 8 ; n++)
		{
		  PORTA = LED[n];
		  delay(100);
		  if ((PINB & (1<<PB1) ) == 0)  //判断是否按下按键2，按下则跳出循环
	        break;
		}
		break;
	  }
	  break;
    }
  }
}