#include <iom16v.h>

#pragma interrupt_handler seriver0:2
#pragma interrupt_handler seriver1:3

unsigned char COUNT=0x00;

void delay_ms(unsigned int n)
{
  unsigned int i , j;
  for(i = 0 ; i < n ; n++)
    for(j = 0 ; j < 1141 ; j ++) ;
}

void seriver0()
{
  delay_ms(20);
  if((GIFR&(1<<7))==0)
  {
    COUNT++;
	PORTC = ~COUNT;
  }
}

void seriver1()
{
  delay_ms(2);
  if((PIND&(1<<3))==0)
  {
    COUNT--;
	PORTC = ~COUNT;
  }
}

void main()
{
  DDRC = 0xff;
  PORTC = 0xff;
  DDOD = 0x00;
  PORTD = 0x0c;
  
  MCUCR |= 0x0a;
  GICR |= 0xf0;
  SREG |= 0x80;
  while(1) { }
}