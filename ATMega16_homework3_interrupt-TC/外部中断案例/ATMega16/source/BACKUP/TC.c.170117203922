#include <iom128v.h>




void delay_ms(unsigned int n)
{
  unsigned int i , j;
  for(i = 0 ; i < n ; n++)
    for(j = 0 ; j < 1141 ; j ++) ;
}

#pragma interrupt_handler seriver0:2
void seriver0()
{
  delay_ms(20);
  if((PIND&0x01)==0)
  {
    COUNT++;
	PORTA = ~COUNT;
  }
}

#pragma interrupt_handler seriver1:3
void seriver1()
{
  delay_ms(20);
  if((PIND&0x02)==0)
  {
    COUNT--;
	PORTA = ~COUNT;
  }
}

void main()
{
  int COUNT;
  DDRA = 0xff;
  PORTA = 0xff;

  EICRA = 0x0a;
  EIMSK |= 0x03;
  SREG |= 0x80;
  while(1) { }
}