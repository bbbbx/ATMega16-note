#include <iom128v.h>


unsigned char COUNT=0x00;

void delay_ms(unsigned int n)
{
  unsigned int i , j;
  for(i = 0 ; i < n ; n++)
    for(j = 0 ; j < 1141 ; j ++) ;
}

#pragma interrupt_handler seriver0:2
void seriver0()
{
  delay_ms(20);
  if((PIND&(1<<0))==0)
  {
    COUNT++;
	PORTC = ~COUNT;
  }
}

#pragma interrupt_handler seriver1:3
void seriver1()
{
  delay_ms(2);
  if((PIND&(1<<1))==0)
  {
    COUNT--;
	PORTC = ~COUNT;
  }
}

void main()
{
  DDRC = 0xff;
  PORTC = 0xff;

  EICRA = 0x0a;
  EIMSK |= 0x03;
  SREG |= 0x80;
  while(1) { }
}