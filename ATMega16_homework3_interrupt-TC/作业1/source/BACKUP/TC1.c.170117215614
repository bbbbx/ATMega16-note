#include <iom16v.h>

unsigned char table_ca[]={0xC0,0xF9,0xA4,0xB0,0x99,0x92,0x82,0xF8,0x80,0x90};
int GEWEI,SHIWEI;

void delay_ms(unsigned int n)
{
  unsigned int i,j;
  for(i = 0 ; i < n ; i++)
    for(j = 0 ; j < 1141; j++) ;
}

#pragma interrupt_handler TC1:9
void TC1()
{
  PORTC = table_ca[GEWEI];
  GEWEI++;
  delay_ms(500);
  
  if(GEWEI==10)
  {
    GEWEI = 0;
	SHIWEI++;
  }
  
  if(SHIWEI==10)
  {
    SHIWEI=0;
  }
  
  PORTC = table_ca[SHIWEI];
  delay_ms(500);
  
  TCNT1H = 0x85;
  TCNT1L = 0xee;
}

void main()
{
  DDRC = 0xff;
  PORTC = 0x00;
  DDRD = 0x03;
  PORTD = 0x03;
  
  TCCR1B = 0x04;
  TCNT1H = 0x85;
  TCNT1L = 0xee;
  TIMSK = (1<<2);
  SREG |= 0x80;
  while(1) { }
}