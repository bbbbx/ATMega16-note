#include <iom16v.h>

unsigned char SEG7_num_ca[] = { 0xC0 ,0xF9 ,0xA4 ,0xB0 ,0x99 ,0x92 ,0x82 ,0xF8 ,0x80 ,0x90 };  //共阳数码管码表0-9
unsigned char SEG7_numWithDot_ca[] = { 0x40 ,0x79 ,0x24 ,0x30 ,0x19 ,0x12 ,0x02 ,0x78 ,0x00 ,0x10 };  //共阳数码管码表带小数点0-9

unsigned int SEG7_flag=0 , LED_flag=0;

void delay_ms(unsigned int ms)  //延时函数
{
  unsigned int i , j ; 
  for (i = 0 ; i < ms ; i++)
    for(j = 0 ; j < 1141 ; j++) ;
}

void SEG7_init()  //数码管IO初始化函数
{
  DDRA |= 0xff;
  PORTA |= 0x00;
  DDRB |= 0x0f;
  PORTB |= 0x00;
  
}

void SEG7_show_year()  //数码管显示年份2017函数
{
  //渲染2
  PORTB = 0x01;
  PORTA = SEG7_num_ca[2];
  delay_ms(10);
  //渲染0
  PORTB = 0x02;
  PORTA = SEG7_num_ca[0];
  delay_ms(10);
  //渲染1
  PORTB = 0x04;
  PORTA = SEG7_num_ca[1];
  delay_ms(10);
  //渲染7
  PORTB = 0x08;
  PORTA = SEG7_num_ca[7];
  delay_ms(10);
}

void SEG7_show_date()  //数码管显示日期0203函数
{
  //渲染0
  PORTB = 0x01;
  PORTA = SEG7_num_ca[0];
  delay_ms(10);
  //渲染2
  PORTB = 0x02;
  PORTA = SEG7_num_ca[2];
  delay_ms(10);
  //渲染0
  PORTB = 0x04;
  PORTA = SEG7_num_ca[0];
  delay_ms(10);
  //渲染3
  PORTB = 0x08;
  PORTA = SEG7_num_ca[3];
  delay_ms(10);
}

void SEG7_show_time()  //数码管显示时分17.54函数
{
  //渲染1
  PORTB = 0x01;
  PORTA = SEG7_num_ca[1];
  delay_ms(10);
  //渲染0
  PORTB = 0x02;
  PORTA = SEG7_numWithDot_ca[7];
  delay_ms(10);
  //渲染0
  PORTB = 0x04;
  PORTA = SEG7_num_ca[5];
  delay_ms(10);
  //渲染3
  PORTB = 0x08;
  PORTA = SEG7_num_ca[4];
  delay_ms(10);
}
void button_init()  //矩阵按键IO初始化函数
{
  DDRC = 0x0f;
  PORTC = 0xff;
}

void button_scan()  //扫描矩阵按键函数
{
  //扫描第一列
  PORTC = 0xf7;
  switch(PINA&(0xf0))
  {
    case 0xe0: SEG7_flag=1 ;
	  	   	   break;  	   	  //按键1
	case 0xd0: SEG7_flag=4 ; 
	  	   	   break;  	   	  //按键5
	case 0xb0: SEG7_flag=8 ; 
	  	   	   break;  	   	  //按键9
    case 0x70: SEG7_flag=2 ; 
	  	   	   break;  	   	  //按键13
  }
  //扫描第二列
  PORTC = 0xfb;
  switch(PINA&(0xf0))
  {
    case 0xe0: SEG7_flag=2 ;
	  	   	   break;  	   	  //按键2
	case 0xd0: SEG7_flag=4 ; 
	  	   	   break;  	   	  //按键6
	case 0xb0: SEG7_flag=8 ; 
	  	   	   break;  	   	  //按键10
    case 0x70: SEG7_flag=2 ; 
	  	   	   break;  	   	  //按键14
  }
  //扫描第三列
  PORTC = 0xfd;
  switch(PINA&(0xf0))
  {
    case 0xe0: SEG7_flag=3 ;
	  	   	   break;  	   	  //按键3
	case 0xd0: SEG7_flag=4 ; 
	  	   	   break;  	   	  //按键7
	case 0xb0: SEG7_flag=8 ; 
	  	   	   break;  	   	  //按键11
    case 0x70: SEG7_flag=2 ; 
	  	   	   break;  	   	  //按键15
  }
  //扫描第四列
  PORTC = 0xfe;
  switch(PINA&(0xf0))
  {
    case 0xe0: SEG7_flag=1 ;
	  	   	   break;  	   	  //按键4
	case 0xd0: SEG7_flag=4 ; 
	  	   	   break;  	   	  //按键8
	case 0xb0: SEG7_flag=8 ; 
	  	   	   break;  	   	  //按键12
    case 0x70: SEG7_flag=2 ; 
	  	   	   break;  	   	  //按键16
  }
}

void main()
{
  SEG7_init();
  button_init();
  
  while(1)
  {
    if(SEG7_flag==1)
	{
	  SEG7_show_year();
	}
	if(SEG7_flag==2)
	{
	  SEG7_show_date();
	}
	if(SEG7_flag==3)
	{
	  SEG7_show_time();
	}
  }
}